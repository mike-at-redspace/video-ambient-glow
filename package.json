{
  "name": "video-ambient-glow",
  "version": "1.0.3",
  "description": "Lightweight library for adding YouTube-style ambient glow effects to HTML5 video elements",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "build:example": "npm run build && cd example && npm install && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npm run format && eslint src tests example",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"example/**/*.{js,css,html}\" \"example/**/*.hbs\" \"example/*.{js,json}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"example/**/*.{js,css,html}\" \"example/**/*.hbs\" \"example/*.{js,json}\" \"*.{js,json,md}\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "video",
    "ambient",
    "glow",
    "effect",
    "canvas",
    "html5",
    "youtube",
    "backdrop",
    "video-effects",
    "visual-effects",
    "ui-effects"
  ],
  "author": "Mike Vardy <https://github.com/mike-at-redspace>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.0.10",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mike-at-redspace/video-ambient-glow.git"
  },
  "bugs": {
    "url": "https://github.com/mike-at-redspace/video-ambient-glow/issues"
  },
  "homepage": "https://github.com/mike-at-redspace/video-ambient-glow#readme",
  "directories": {
    "example": "example",
    "test": "tests"
  }
}
